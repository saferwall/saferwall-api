{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Email",
  "description": "This schema is representing a request to change email",
  "type": "object",
  "properties": {
    "email": {
      "description": "The new user's email",
      "type": "string",
      "format": "email"
    },
    "password": {
      "description": "The user password",
      "type": "string",
      "minLength": 8
    }
  },
  "required": [
    "email",
    "password"
  ],
  "additionalProperties": false
}