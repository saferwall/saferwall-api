{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Password",
  "description": "This schema is representing an update password",
  "type": "object",
  "properties": {
    "oldpassword": {
      "description": "The user's old password",
      "type": "string",
      "minLength": 8
    },
    "newpassword": {
      "description": "The user's new password",
      "type": "string",
      "minLength": 8
    }
  },
  "required": [
    "oldpassword",
    "newpassword"
  ],
  "additionalProperties": false
}