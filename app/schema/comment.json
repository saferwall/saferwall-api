{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Comment",
    "description": "This schema is representing a request to add new comment",
    "type": "object",
    "properties": {
        "body": {
            "description": "Comment content",
            "type": "string"
        },
        "timestamp": {
            "description": "Comment publish date",
            "type": "integer"
        },
        "username": {
            "description": "User who made the comment",
            "type": "string"
        },
        "id": {
            "description": "ID to uniquely identify the comment",
            "type": "string"
        }
    },
    "required": [
        "body"
    ],
    "additionalProperties": false
}